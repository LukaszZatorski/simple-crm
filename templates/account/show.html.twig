{% extends 'base.html.twig' %}

{% block title %}Account - Details{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Account Details</h1>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">{{ account.name }}</h5>
            <p class="card-text"><strong>Billing Street:</strong> {{ account.billingStreet }}</p>
            <p class="card-text"><strong>Billing City:</strong> {{ account.billingCity }}</p>
            <p class="card-text"><strong>Billing State:</strong> {{ account.billingState }}</p>
            <p class="card-text"><strong>Billing Zip:</strong> {{ account.billingZip }}</p>
            <p class="card-text"><strong>Billing Country:</strong> {{ account.billingCountry }}</p>
            <p class="card-text"><strong>Phone:</strong> {{ account.phone }}</p>
            <p class="card-text"><strong>Email:</strong> {{ account.email }}</p>
            <p class="card-text"><strong>Tax Number:</strong> {{ account.taxNumber }}</p>
            <p class="card-text"><strong>Website:</strong> {{ account.website }}</p>
            <p class="card-text"><strong>Description:</strong> {{ account.description }}</p>
            <p class="card-text"><strong>Date Created:</strong> {{ account.createdAt|format_datetime('medium', 'short') }}</p>
            <p class="card-text"><strong>Date Updated:</strong> {{ account.updatedAt ? account.updatedAt|format_datetime('medium', 'short') : '' }}</p>
            <p class="card-text"><strong>Assigned To:</strong> {{ account.assignedTo ? account.assignedTo.username : '' }}</p>
            <a href="{{ path('account_edit', {'id': account.id}) }}" class="btn btn-warning">Edit</a>
            <a href="{{ path('account_index') }}" class="btn btn-secondary">Back to list</a>
        </div>
    </div>
</div>
{% endblock %}