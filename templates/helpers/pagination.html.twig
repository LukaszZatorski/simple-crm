{% macro render_pagination(current_page, total_pages, route_name) %}
    {% if total_pages > 0 %}
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                {% if current_page > 1 %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path(route_name, {'page': current_page - 1}) }}" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                {% endif %}
                {% for i in 1..total_pages %}
                    <li class="page-item {% if i == current_page %}active{% endif %}">
                        <a class="page-link" href="{{ path(route_name, {'page': i}) }}">{{ i }}</a>
                    </li>
                {% endfor %}
                {% if current_page < total_pages %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path(route_name, {'page': current_page + 1}) }}" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    {% endif %}
{% endmacro %}