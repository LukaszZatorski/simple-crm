<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {% endblock %}
        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-light px-2">
                {% if app.user %}
                    <div class="collapse navbar-collapse">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('home') }}">Home</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="{{ path('account_index') }}">
                                    Accounts
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="accountsDropdown">
                                    <li><a class="dropdown-item" href="{{ path('account_new') }}">New Account</a></li>
                                    <li><a class="dropdown-item" href="{{ path('account_index') }}">View Accounts</a></li>
                                </ul>
                            </li>
                        </ul>
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('logout') }}">Logout</a>
                            </li>
                        </ul>
                    </div>
                {% else %}
                    <div class="navbar-brand">Simple CRM</div>
                {% endif %}
            </nav>
        </header>
        <main role="main" class="container-fluid">
            {% block body %}{% endblock %}
        </main>
        <footer class="footer mt-auto py-3 bg-light">
            <div class="container">
                <span class="text-muted">Place sticky footer content here.</span>
            </div>
        </footer>
    </body>
</html>